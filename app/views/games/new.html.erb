<h1>Games#new</h1>
<ul>
  <% @letters.each do |l| %>
    <li><%= l %></li>
  <% end %>
</ul>
<h2 class="btn btn-red"></h2>
<form action="/score" method="post" data-turbo="false">
  <label for="guess">Answer</label>
  <input type="text" id="guess" name="guess">
  <input type="hidden" name="letters" value="<%= @letters.join(" ") %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
</form>
